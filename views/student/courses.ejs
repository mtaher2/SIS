<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-2">My Courses</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/student/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">My Courses</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Filter and Search -->
    <div class="card mb-4">
        <div class="card-body">
            <form action="/student/courses" method="GET" class="row g-3">
                <div class="col-md-6">
                    <label for="search" class="form-label">Search</label>
                    <input type="text" class="form-control" id="search" name="search" 
                           placeholder="Course name or code" value="<%= locals.search || '' %>">
                </div>
                <div class="col-md-4">
                    <label for="semester" class="form-label">Semester</label>
                    <select class="form-select" id="semester" name="semester_id">
                        <option value="">All Semesters</option>
                        <% if (locals.semesters && semesters.length > 0) { %>
                            <% semesters.forEach(semester => { %>
                                <option value="<%= semester.semester_id %>" 
                                    <%= locals.semester_id == semester.semester_id ? 'selected' : '' %>>
                                    <%= semester.semester_name %>
                                </option>
                            <% }); %>
                        <% } %>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Courses List -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% if (courses && courses.length > 0) { %>
            <% courses.forEach(course => { %>
                <div class="col">
                    <div class="card h-100 course-card">
                        <div class="card-header">
                            <h5 class="mb-0"><%= course.title %></h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-3">
                                <span class="badge rounded-pill bg-secondary"><%= course.course_code %></span>
                                <span class="badge rounded-pill bg-info"><%= course.credit_hours %> Credits</span>
                            </div>
                            <p class="card-text mb-3"><%= course.description ? course.description.substring(0, 100) + '...' : 'No description available' %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted"><i class="fas fa-chalkboard-teacher me-1"></i> <%= course.instructor_name || 'No instructor assigned' %></span>
                                <% if (course.current_grade) { %>
                                    <span class="badge rounded-pill bg-<%= course.current_grade >= 90 ? 'success' : course.current_grade >= 80 ? 'primary' : course.current_grade >= 70 ? 'info' : course.current_grade >= 60 ? 'warning' : 'danger' %>">
                                        <%= course.current_grade %>%
                                    </span>
                                <% } else { %>
                                    <span class="badge rounded-pill bg-secondary">No Grade</span>
                                <% } %>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0">
                            <a href="/student/courses/<%= course.course_id %>" class="btn btn-primary d-block">
                                <i class="fas fa-eye me-1"></i> View Course
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i> You are not enrolled in any courses.
                </div>
            </div>
        <% } %>
    </div>
</div>

<style>
    .course-card {
        transition: transform 0.2s;
    }
    .course-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
</style> 