<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-2">Announcements</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/student/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Announcements</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Spam filter controls -->
    <div class="mb-4">
        <div class="btn-group" role="group">
            <a href="/student/announcements" class="btn btn-outline-primary <%= !filters || !filters.is_spam ? 'active' : '' %>">All</a>
            <a href="/student/announcements?filter=regular" class="btn btn-outline-success <%= filters && filters.is_spam === false ? 'active' : '' %>">Regular</a>
            <a href="/student/announcements?filter=spam" class="btn btn-outline-danger <%= filters && filters.is_spam === true ? 'active' : '' %>">Spam</a>
        </div>
    </div>

    <!-- Filter and Search -->
    <div class="card mb-4">
        <div class="card-body">
            <form action="/student/announcements" method="GET" class="row g-3">
                <div class="col-md-6">
                    <label for="search" class="form-label">Search</label>
                    <input type="text" class="form-control" id="search" name="search" 
                           placeholder="Search by title or content" value="<%= locals.search || '' %>">
                </div>
                <div class="col-md-4">
                    <label for="course" class="form-label">Filter by Course</label>
                    <select class="form-select" id="course" name="course_id">
                        <option value="">All Announcements</option>
                        <% if (locals.courses && courses.length > 0) { %>
                            <% courses.forEach(course => { %>
                                <option value="<%= course.course_id %>" 
                                    <%= locals.course_id == course.course_id ? 'selected' : '' %>>
                                    <%= course.course_code %> - <%= course.title %>
                                </option>
                            <% }); %>
                        <% } %>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Announcements List -->
    <div class="card">
        <div class="card-body">
            <% if (announcements && announcements.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Target</th>
                                <th>Created By</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Spam</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% announcements.forEach(announcement => { %>
                                <tr>
                                    <td>
                                        <div class="fw-bold"><%= announcement.title %></div>
                                        <div class="small text-muted text-truncate" style="max-width: 300px;">
                                            <%= announcement.content.substring(0, 100) %><%= announcement.content.length > 100 ? '...' : '' %>
                                        </div>
                                    </td>
                                    <td>
                                        <% if (announcement.target_type === 'all') { %>
                                            <span class="badge bg-primary">All Users</span>
                                        <% } else if (announcement.target_type === 'students') { %>
                                            <span class="badge bg-success">All Students</span>
                                        <% } else if (announcement.target_type === 'course') { %>
                                            <span class="badge bg-info">
                                                Course: <%= announcement.course_code || 'Unknown' %>
                                            </span>
                                        <% } else if (announcement.target_type === 'specific_users') { %>
                                            <span class="badge bg-warning text-dark">Specific Users</span>
                                            <div class="small text-muted">Including You</div>
                                        <% } %>
                                    </td>
                                                                        <td>                                        <%= announcement.author_name || 'Unknown' %>                                    </td>
                                    <td>
                                        <%= new Date(announcement.created_at).toLocaleDateString() %>
                                    </td>
                                    <td>
                                        <% if (announcement.is_active) { %>
                                            <span class="badge bg-success">Active</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Inactive</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (announcement.is_spam) { %>
                                            <span class="badge bg-danger" title="Confidence: <%= Math.round(announcement.spam_confidence * 100) %>%">Spam</span>
                                        <% } else { %>
                                            <span class="badge bg-success">OK</span>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i> No announcements available at this time.
                </div>
            <% } %>
        </div>
    </div>

    <!-- Pagination -->
    <% if (locals.totalPages && totalPages > 1) { %>
        <nav aria-label="Announcement pagination" class="d-flex justify-content-center mt-4">
            <ul class="pagination">
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                        <a class="page-link" href="/student/announcements?page=<%= i %><%= locals.search ? '&search=' + search : '' %><%= locals.course_id ? '&course_id=' + course_id : '' %>"><%= i %></a>
                    </li>
                <% } %>
            </ul>
        </nav>
    <% } %>
</div>

<style>
    .announcement-card {
        transition: transform 0.2s;
    }
    .announcement-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
    .announcement-content {
        white-space: pre-line;
        max-height: 200px;
        overflow-y: auto;
    }
</style> 