<div class="container">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/announcements">Announcements</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= announcement.title %></li>
        </ol>
    </nav>

    <div class="card mb-4 <%= announcement.is_spam ? 'border-danger' : '' %>">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><%= announcement.title %></h3>
            <div>
                <% if (announcement.is_spam) { %>
                <span class="badge bg-danger me-1" title="Spam confidence: <%= Math.round(announcement.spam_confidence * 100) %>%">
                    <i class="fas fa-exclamation-triangle"></i> Spam
                </span>
                <% } %>
                <span class="badge bg-primary"><%= announcement.target_type === 'all' ? 'Public' : announcement.target_type %></span>
            </div>
        </div>
        <div class="card-body">
            <% if (announcement.is_spam) { %>
            <div class="alert alert-warning mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i> 
                This announcement has been identified as potential spam (confidence: <%= Math.round(announcement.spam_confidence * 100) %>%). 
                Please review its content carefully.
            </div>
            <% } %>
            <div class="mb-4">
                <p><%= announcement.content %></p>
            </div>
            
                        <div class="d-flex justify-content-between text-muted small">                <div>                    <i class="fas fa-user me-1"></i> Author: <%= announcement.author_name || 'Unknown' %>                </div>                <div>                    <i class="fas fa-clock me-1"></i> Posted: <%= new Date(announcement.created_at).toLocaleString() %>                </div>                <% if (announcement.updated_at && announcement.updated_at !== announcement.created_at) { %>                <div>                    <i class="fas fa-edit me-1"></i> Last updated: <%= new Date(announcement.updated_at).toLocaleString() %>                </div>                <% } %>            </div>
        </div>
        <div class="card-footer">
            <% if (user && (user.role === 'admin' || (user.role === 'instructor' && user.user_id === announcement.created_by))) { %>
                <div class="btn-group">
                    <a href="/announcements/edit/<%= announcement.id %>" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    
                    <form action="/announcements/<%= announcement.id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this announcement?');">
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </div>
            <% } %>
        </div>
    </div>
    
    <div class="mt-4">
        <a href="/announcements" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Announcements
        </a>
    </div>
</div> 