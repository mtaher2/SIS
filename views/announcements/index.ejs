<div class="container">
    <h1 class="mb-4">Announcements</h1>
    
    <% if (user && (user.role === 'admin' || user.role === 'instructor')) { %>
    <div class="mb-4">
        <a href="/announcements/create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Announcement
        </a>
    </div>
    <% } %>
    
    <!-- Spam filter controls -->
    <div class="mb-4">
        <div class="btn-group" role="group">
            <a href="/announcements" class="btn btn-outline-primary <%= !filters || !filters.is_spam ? 'active' : '' %>">All</a>
            <a href="/announcements?filter=regular" class="btn btn-outline-success <%= filters && filters.is_spam === false ? 'active' : '' %>">Regular</a>
            <a href="/announcements?filter=spam" class="btn btn-outline-danger <%= filters && filters.is_spam === true ? 'active' : '' %>">Spam</a>
        </div>
    </div>
    
    <% if (announcements && announcements.length > 0) { %>
        <div class="row">
            <% announcements.forEach(announcement => { %>
                <div class="col-md-6 mb-4">
                    <div class="card <%= announcement.is_spam ? 'border-danger' : '' %>">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><%= announcement.title %></h5>
                            <div>
                                <% if (announcement.is_spam) { %>
                                    <span class="badge bg-danger me-1" title="Spam confidence: <%= Math.round(announcement.spam_confidence * 100) %>%">
                                        <i class="fas fa-exclamation-triangle"></i> Spam
                                    </span>
                                <% } %>
                                <span class="badge bg-primary"><%= announcement.target_type === 'all' ? 'Public' : announcement.target_type %></span>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="card-text text-truncate"><%= announcement.content.substring(0, 150) %>...</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">Posted: <%= new Date(announcement.created_at).toLocaleDateString() %></small>
                                <a href="/announcements/<%= announcement.announcement_id %>" class="btn btn-sm btn-outline-primary">Read More</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i> No announcements available at this time.
        </div>
    <% } %>
</div> 