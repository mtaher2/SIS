<%- include('partials/header') %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="display-4"><%= title %></h1>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
                    </div>
                    <h2 class="mb-4"><%= message %></h2>
                    <p class="lead">Sorry for the inconvenience. You can try one of the following:</p>
                    <ul class="list-unstyled text-start">
                        <li><i class="fas fa-arrow-left me-2"></i> <a href="javascript:history.back()">Go back to the previous page</a></li>
                        <li><i class="fas fa-home me-2"></i> <a href="/">Go to the home page</a></li>
                        <% if (user) { %>
                            <% if (user.role === 'admin') { %>
                                <li><i class="fas fa-tachometer-alt me-2"></i> <a href="/admin/dashboard">Go to your dashboard</a></li>
                            <% } else if (user.role === 'instructor') { %>
                                <li><i class="fas fa-tachometer-alt me-2"></i> <a href="/instructor/dashboard">Go to your dashboard</a></li>
                            <% } else if (user.role === 'student') { %>
                                <li><i class="fas fa-tachometer-alt me-2"></i> <a href="/student/dashboard">Go to your dashboard</a></li>
                            <% } %>
                        <% } else { %>
                            <li><i class="fas fa-sign-in-alt me-2"></i> <a href="/auth/login">Login to your account</a></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 