<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Student Information System</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- Favicon -->
    <link rel="shortcut icon" href="/images/logo.png" type="image/png">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand navbar-logo-container" href="/">
                <img src="/images/logo.png" alt="Galala University" class="galala-logo">
                Student Information System
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <% if (user) { %>
                    <li class="nav-item">
                        <% if (user.role === 'admin') { %>
                        <a class="nav-link" href="/courses">Courses</a>
                        <% } %>
                        <% if (user.role === 'instructor') { %>
                        <a class="nav-link" href="/instructor/courses">Courses</a>
                        <% } %>
                        <% if (user.role === 'student') { %>
                        <a class="nav-link" href="/student/courses">Courses</a>
                        <% } %>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link position-relative" href="/announcements">
                            Announcements
                        </a>
                    </li>
                    <% } %>
                    <% if (user) { %>
                        <% if (user.role === 'admin') { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/admin/dashboard">Admin Dashboard</a>
                            </li>
                        <% } else if (user.role === 'instructor') { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/instructor/dashboard">Instructor Dashboard</a>
                            </li>
                        <% } else if (user.role === 'student') { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/student/dashboard">Student Dashboard</a>
                            </li>
                        <% } %>
                    <% } %>
                </ul>
                <ul class="navbar-nav">
                    <% if (user) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user"></i> <%= user.first_name %> <%= user.last_name %>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <% if (user.role === 'admin') { %>
                                    <li><a class="dropdown-item" href="/admin/dashboard">Dashboard</a></li>
                                <% } else if (user.role === 'instructor') { %>
                                    <li><a class="dropdown-item" href="/instructor/profile">My Profile</a></li>
                                    <li><a class="dropdown-item" href="/instructor/courses">My Courses</a></li>
                                    <li><a class="dropdown-item" href="/instructor/announcements">My Announcements</a></li>
                                <% } else if (user.role === 'student') { %>
                                    <li><a class="dropdown-item" href="/student/profile">My Profile</a></li>
                                    <li><a class="dropdown-item" href="/student/courses">My Courses</a></li>
                                    <li><a class="dropdown-item" href="/student/grades">My Grades</a></li>
                                <% } %>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/auth/change-password">Change Password</a></li>
                                <li><a class="dropdown-item" href="/auth/logout">Logout</a></li>
                            </ul>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/login">Login</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Flash Messages -->
    <div class="container mt-3">
        <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
            <div class="alert alert-success alert-dismissible fade show flash-message">
                <%= success_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show flash-message">
                <%= error_msg %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (typeof error !== 'undefined' && error.length > 0) { %>
            <div class="alert alert-danger alert-dismissible fade show flash-message">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
    </div>

    <!-- Main Content -->
    <main class="container my-4">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="text-center text-lg-start mt-5">
        <div class="container">
            <div class="row py-4">
                <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                    <div class="d-flex align-items-center justify-content-center justify-content-md-start mb-3">
                        <img src="/images/logo.png" alt="Galala University" class="galala-logo me-2">
                        <h5 class="mb-0">Galala University</h5>
                    </div>
                    <p class="text-start">
                        Galala University's Student Information System provides a centralized platform for managing academic operations.
                    </p>
                </div>
                <div class="col-lg-4 col-md-6 mb-4 mb-md-0">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="/" class="text-white">Home</a></li>
                        <% if (user) { %>
                        <li class="mb-2"><a href="/courses" class="text-white">Courses</a></li>
                        <li class="mb-2"><a href="/announcements" class="text-white">Announcements</a></li>
                        <% } %>
                        <% if (!user) { %>
                        <li class="mb-2"><a href="/auth/login" class="text-white">Login</a></li>
                        <% } %>
                    </ul>
                </div>
                <div class="col-lg-4 col-md-12 mb-4 mb-md-0">
                    <h5>Contact Us</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="fas fa-map-marker-alt me-2"></i> Galala City, Suez, Egypt</li>
                        <li class="mb-2"><i class="fas fa-phone me-2"></i> +20 123 456 7890</li>
                        <li class="mb-2"><i class="fas fa-envelope me-2"></i> info@galala.edu.eg</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            Â© <%= new Date().getFullYear() %> Galala University - Student Information System
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Custom JS -->
    <script src="/js/main.js"></script>
    
    <!-- Auto-hide flash messages after 3 seconds -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const flashMessages = document.querySelectorAll('.flash-message');
            
            if (flashMessages.length > 0) {
                flashMessages.forEach(function(message) {
                    setTimeout(function() {
                        // Fade out
                        message.style.transition = 'opacity 0.5s ease';
                        message.style.opacity = '0';
                        
                        // Remove from DOM after transition
                        setTimeout(function() {
                            message.style.display = 'none';
                        }, 500);
                    }, 3000);
                });
            }
        });
    </script>

    <!-- Debug section in layouts/main.ejs -->
    <% if (process.env.NODE_ENV !== 'production') { %>
        <div class="debug-panel" style="display: none; position: fixed; bottom: 0; right: 0; width: 350px; max-height: 80vh; overflow-y: auto; background: rgba(0,0,0,0.8); color: #fff; padding: 10px; font-family: monospace; font-size: 12px; z-index: 9999; border-top-left-radius: 5px;">
            <h6>Debug Info <button onclick="this.parentElement.parentElement.style.display='none'" style="float:right; background: none; border: none; color: white;">&times;</button></h6>
            <div>
                <strong>URL:</strong> <span id="debug-url"></span>
            </div>
            <div>
                <strong>Route params:</strong> <span id="debug-params"></span>
            </div>
            <div>
                <strong>User:</strong> <%= typeof user !== 'undefined' && user && user.username ? user.username : 'Not logged in' %>
            </div>
            <div>
                <strong>Session ID:</strong> <span id="debug-session"></span>
            </div>
            <div>
                <strong>Flash messages:</strong>
                <pre><%= typeof success_msg !== 'undefined' || typeof error_msg !== 'undefined' ? JSON.stringify({success: success_msg, error: error_msg}, null, 2) : 'None' %></pre>
            </div>
            <div>
                <strong>Template data:</strong>
                <% if (typeof quizResults !== 'undefined' && quizResults && quizResults.quiz) { %>
                    <div style="margin-left: 10px;">
                        <div><strong>Quiz:</strong> <%= quizResults.quiz.title %> (ID: <%= quizResults.quiz.quiz_id %>)</div>
                        <div><strong>Score:</strong> <%= quizResults.score %> / <%= quizResults.totalPoints %></div>
                        <div><strong>Questions:</strong> <%= quizResults.answers ? quizResults.answers.length : 0 %></div>
                    </div>
                <% } else { %>
                    <span>No quiz results data</span>
                <% } %>
            </div>
        </div>
        <script>
            // Add keyboard shortcut to toggle debug panel (Ctrl+Shift+D)
            document.addEventListener('keydown', function(e) {
                if (e.ctrlKey && e.shiftKey && e.key === 'D') {
                    toggleDebugPanel();
                    e.preventDefault();
                }
            });
            
            // Fill debug info
            document.getElementById('debug-url').textContent = window.location.href;
            document.getElementById('debug-params').textContent = window.location.pathname.split('/').filter(Boolean).join(', ');
            document.getElementById('debug-session').textContent = document.cookie.includes('connect.sid') ? 'Active' : 'None';
            
            // Toggle button handler
            document.getElementById('debug-toggle-btn').addEventListener('click', toggleDebugPanel);
            
            function toggleDebugPanel() {
                const panel = document.querySelector('.debug-panel');
                panel.style.display = panel.style.display === 'none' ? 'block' : 'none';
            }
        </script>
    <% } %>
</body>
</html> 