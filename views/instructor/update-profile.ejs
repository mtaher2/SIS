<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-2">Update Profile</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/profile">My Profile</a></li>
                    <li class="breadcrumb-item active">Update Profile</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i> Update Your Profile
                    </h5>
                </div>

                <div class="card-body">
                    <% if (locals.errors && errors.length > 0) { %>
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                <% errors.forEach(error => { %>
                                    <li><%= error.msg %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>

                    <form action="/instructor/update-profile" method="POST" enctype="multipart/form-data">
                        <!-- Personal Information -->
                        <h5 class="mb-3">Personal Information</h5>
                        <div class="row mb-4">
                            <div class="col-md-6 mb-3">
                                <label for="first_name" class="form-label">First Name</label>
                                <input type="text" class="form-control" id="first_name" name="first_name" 
                                    value="<%= user.first_name %>" disabled>
                                <div class="form-text">Contact admin to change your name</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="last_name" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="last_name" name="last_name" 
                                    value="<%= user.last_name %>" disabled>
                                <div class="form-text">Contact admin to change your name</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" 
                                    value="<%= user.email %>" disabled>
                                <div class="form-text">Contact admin to change your email</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="phone" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="phone" name="phone" 
                                    value="<%= profile ? profile.phone : '' %>">
                            </div>
                        </div>

                        <!-- Academic Information -->
                        <h5 class="mb-3">Academic Information</h5>
                        <div class="row mb-4">
                            <div class="col-md-6 mb-3">
                                <label for="department" class="form-label">Department</label>
                                <input type="text" class="form-control" id="department" name="department" 
                                    value="<%= profile ? profile.department : '' %>">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="office_location" class="form-label">Office Location</label>
                                <input type="text" class="form-control" id="office_location" name="office_location" 
                                    value="<%= profile ? profile.office_location : '' %>">
                            </div>
                            <div class="col-12 mb-3">
                                <label for="office_hours" class="form-label">Office Hours</label>
                                <textarea class="form-control" id="office_hours" name="office_hours" rows="3"><%= profile ? profile.office_hours : '' %></textarea>
                                <div class="form-text">Example: Monday 10:00-12:00, Wednesday 14:00-16:00</div>
                            </div>
                        </div>

                        <!-- Profile Image -->
                        <h5 class="mb-3">Profile Image</h5>
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="profile_image" class="form-label">Upload New Profile Image</label>
                                    <input class="form-control" type="file" id="profile_image" name="profile_image" accept="image/*">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="text-center">
                                    <% if (user.profile_image) { %>
                                        <img src="/storage/profile_images/<%= user.profile_image %>" alt="Current Profile Image" class="img-thumbnail" style="max-height: 150px;">
                                    <% } else { %>
                                        <div class="bg-light p-4 text-center rounded">
                                            <i class="fas fa-user-circle fa-5x text-secondary"></i>
                                            <p class="mt-2 text-muted">No profile image</p>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/instructor/profile" class="btn btn-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 