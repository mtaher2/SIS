<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-2">Module Pages</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses">My Courses</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses/<%= course.course_id %>"><%= course.title %></a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses/<%= course.course_id %>/modules">Modules</a></li>
                    <li class="breadcrumb-item active">Pages</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-4 text-end">
            <a href="/instructor/modules/<%= module.module_id %>/pages/create" class="btn btn-primary">
                <i class="fas fa-plus-circle me-1"></i> Create Page
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i> Pages - <%= module.title %></h5>
        </div>
        <div class="card-body">
            <% if (pages && pages.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Last Updated</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% pages.forEach(page => { %>
                                <tr>
                                    <td>
                                        <a href="/instructor/modules/<%= module.module_id %>/pages/<%= page.page_id %>">
                                            <%= page.title %>
                                        </a>
                                    </td>
                                    <td><%= new Date(page.updated_at).toLocaleDateString() %></td>
                                    <td>
                                        <% if (page.published) { %>
                                            <span class="badge bg-success">Published</span>
                                        <% } else { %>
                                            <span class="badge bg-warning text-dark">Unpublished</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end">
                                            <a href="/instructor/modules/<%= module.module_id %>/pages/<%= page.page_id %>" class="btn btn-sm btn-primary me-1" title="View">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/instructor/modules/<%= module.module_id %>/pages/<%= page.page_id %>/edit" class="btn btn-sm btn-warning me-1" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger" title="Delete" 
                                                    onclick="confirmDeletePage('<%= module.module_id %>', '<%= page.page_id %>', '<%= page.title %>')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i> No pages have been created for this module yet.
                    <a href="/instructor/modules/<%= module.module_id %>/pages/create">Create your first page</a>.
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deletePageModal" tabindex="-1" aria-labelledby="deletePageModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deletePageModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the page "<span id="pageTitle"></span>"?</p>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i> This action cannot be undone.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deletePageForm" action="" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">Delete Page</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDeletePage(moduleId, pageId, title) {
        document.getElementById('pageTitle').textContent = title;
        document.getElementById('deletePageForm').action = `/instructor/modules/${moduleId}/pages/${pageId}`;
        
        const deleteModal = new bootstrap.Modal(document.getElementById('deletePageModal'));
        deleteModal.show();
    }
</script> 