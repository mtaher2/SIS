<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-2"><%= page.title %></h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses">My Courses</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses/<%= course.course_id %>"><%= course.title %></a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses/<%= course.course_id %>/modules">Modules</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/modules/<%= module.module_id %>/pages">Pages</a></li>
                    <li class="breadcrumb-item active"><%= page.title %></li>
                </ol>
            </nav>
        </div>
        <div class="col-md-4 text-end">
            <div class="btn-group">
                <a href="/instructor/modules/<%= module.module_id %>/pages/<%= page.page_id %>/edit" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i> Edit
                </a>
                <a href="/instructor/modules/<%= module.module_id %>/pages" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Back to Pages
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-9">
            <!-- Page Content -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i> Page Content</h5>
                    <div>
                        <% if (page.published) { %>
                            <span class="badge bg-success">Published</span>
                        <% } else { %>
                            <span class="badge bg-warning text-dark">Unpublished</span>
                        <% } %>
                    </div>
                </div>
                <div class="card-body">
                    <div class="page-content">
                        <%- page.content %>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <!-- Sidebar with metadata -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i> Page Info</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Created By</strong>
                        <div class="mt-1 d-flex align-items-center">
                            <% if (page.profile_image) { %>
                                <img src="<%= page.profile_image %>" alt="<%= page.first_name %> <%= page.last_name %>" class="rounded-circle me-2" style="width: 30px; height: 30px;">
                            <% } else { %>
                                <i class="fas fa-user-circle me-2" style="font-size: 30px;"></i>
                            <% } %>
                            <%= page.first_name %> <%= page.last_name %>
                        </div>
                    </div>
                    <div class="mb-3">
                        <strong>Created</strong>
                        <div><%= new Date(page.created_at).toLocaleDateString() %></div>
                    </div>
                    <div class="mb-3">
                        <strong>Last Updated</strong>
                        <div><%= new Date(page.updated_at).toLocaleDateString() %></div>
                    </div>
                    <div class="mb-3">
                        <strong>Status</strong>
                        <div>
                            <% if (page.published) { %>
                                <span class="text-success">Published</span>
                            <% } else { %>
                                <span class="text-warning">Unpublished</span>
                            <% } %>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 mt-4">
                        <button id="togglePublish" class="btn <%= page.published ? 'btn-outline-warning' : 'btn-outline-success' %>">
                            <i class="fas <%= page.published ? 'fa-eye-slash' : 'fa-eye' %> me-1"></i> 
                            <%= page.published ? 'Unpublish' : 'Publish' %>
                        </button>
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deletePageModal">
                            <i class="fas fa-trash me-1"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deletePageModal" tabindex="-1" aria-labelledby="deletePageModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deletePageModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the page "<%= page.title %>"?</p>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i> This action cannot be undone.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form action="/instructor/modules/<%= module.module_id %>/pages/<%= page.page_id %>" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">Delete Page</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Toggle publish button
        const togglePublishBtn = document.getElementById('togglePublish');
        if (togglePublishBtn) {
            togglePublishBtn.addEventListener('click', function() {
                fetch('/instructor/modules/<%= module.module_id %>/pages/<%= page.page_id %>/toggle-publish', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Update UI based on new published state
                        if (data.published) {
                            togglePublishBtn.classList.remove('btn-outline-success');
                            togglePublishBtn.classList.add('btn-outline-warning');
                            togglePublishBtn.innerHTML = '<i class="fas fa-eye-slash me-1"></i> Unpublish';
                            
                            // Update status badges
                            document.querySelectorAll('.badge').forEach(badge => {
                                badge.classList.remove('bg-warning', 'text-dark');
                                badge.classList.add('bg-success');
                                badge.textContent = 'Published';
                            });
                            
                            document.querySelector('.text-warning').classList.remove('text-warning');
                            document.querySelector('.text-success').textContent = 'Published';
                        } else {
                            togglePublishBtn.classList.remove('btn-outline-warning');
                            togglePublishBtn.classList.add('btn-outline-success');
                            togglePublishBtn.innerHTML = '<i class="fas fa-eye me-1"></i> Publish';
                            
                            // Update status badges
                            document.querySelectorAll('.badge').forEach(badge => {
                                badge.classList.remove('bg-success');
                                badge.classList.add('bg-warning', 'text-dark');
                                badge.textContent = 'Unpublished';
                            });
                            
                            document.querySelector('.text-success').classList.add('text-warning');
                            document.querySelector('.text-warning').textContent = 'Unpublished';
                        }
                    } else {
                        // Show error
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while updating the page status');
                });
            });
        }
    });
</script>

<style>
    .page-content {
        font-size: 1rem;
        line-height: 1.6;
    }
    
    .page-content img {
        max-width: 100%;
        height: auto;
    }
    
    .page-content table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 1rem;
    }
    
    .page-content table td,
    .page-content table th {
        border: 1px solid #dee2e6;
        padding: 0.5rem;
    }
</style> 