<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-bullhorn me-2"></i> Announcement Details
                    </h5>
                    <div>
                        <a href="/instructor/announcements" class="btn btn-sm btn-light me-2">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <h4 class="mb-3"><%= announcement.title %></h4>
                    
                    <div class="mb-4">
                        <span class="badge bg-secondary me-2">
                            <i class="fas fa-clock me-1"></i> <%= new Date(announcement.created_at).toLocaleString() %>
                        </span>
                        
                        <% if (announcement.is_spam) { %>
                            <span class="badge bg-danger">
                                <i class="fas fa-exclamation-triangle me-1"></i> Flagged as Spam (<%= Math.round(announcement.spam_confidence * 100) %>%)
                            </span>
                        <% } %>
                    </div>
                    
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">Target Audience</h6>
                        </div>
                        <div class="card-body">
                            <% if (announcement.target_type === 'all') { %>
                                <span class="badge bg-info">All Users</span>
                            <% } else if (announcement.target_type === 'students') { %>
                                <span class="badge bg-success">All Students</span>
                            <% } else if (announcement.target_type === 'instructors') { %>
                                <span class="badge bg-primary">All Instructors</span>
                            <% } else if (announcement.target_type === 'course') { %>
                                <span class="badge bg-warning">
                                    <i class="fas fa-book me-1"></i> Course: <%= announcement.course_code %> - <%= announcement.course_title %>
                                </span>
                            <% } else if (announcement.target_type === 'specific_users') { %>
                                <span class="badge bg-dark">Specific Users</span>
                                
                                <% if (announcement.recipients && announcement.recipients.length > 0) { %>
                                    <div class="mt-3">
                                        <table class="table table-sm table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Role</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% announcement.recipients.forEach(recipient => { %>
                                                    <tr>
                                                        <td><%= recipient.full_name %></td>
                                                        <td><%= recipient.role_name %></td>
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                <% } %>
                            <% } %>
                        </div>
                    </div>
                    
                    <div class="card">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">Content</h6>
                        </div>
                        <div class="card-body">
                            <div class="announcement-content">
                                <%= announcement.content %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 