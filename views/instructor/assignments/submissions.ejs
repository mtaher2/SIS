<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1"><%= assignment.title %></h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/instructor/courses">Courses</a></li>
                            <li class="breadcrumb-item"><a href="/instructor/courses/<%= course.course_id %>"><%= course.course_name %></a></li>
                            <li class="breadcrumb-item"><a href="/instructor/modules/<%= module.module_id %>"><%= module.module_name %></a></li>
                            <li class="breadcrumb-item active" aria-current="page">Submissions</li>
                        </ol>
                    </nav>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#exportModal">
                        <i class="fas fa-download me-2"></i>Export
                    </button>
                    <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#bulkGradeModal">
                        <i class="fas fa-tasks me-2"></i>Bulk Grade
                    </button>
                </div>
            </div>

            <!-- Assignment Info Card -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h5 class="card-title mb-3">Assignment Details</h5>
                            <div class="mb-3">
                                <strong>Instructions:</strong>
                                <div class="mt-2"><%- assignment.instructions %></div>
                            </div>
                            <div class="mb-3">
                                <strong>Submission Type:</strong>
                                <span class="badge bg-info ms-2">
                                    <%= assignment.submission_type === 'file' ? 'File Upload' :
                                        assignment.submission_type === 'text' ? 'Text Entry' :
                                        assignment.submission_type === 'url' ? 'Website URL' :
                                        assignment.submission_type === 'media' ? 'Media Recording' :
                                        assignment.submission_type === 'external' ? 'External Tool' : 'No Submission' %>
                                </span>
                                <% if (assignment.allowed_file_types) { %>
                                    <small class="text-muted ms-2">Allowed file types: <%= assignment.allowed_file_types %></small>
                                <% } %>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-3">Assignment Settings</h6>
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-2">
                                            <strong>Points:</strong> <%= assignment.points_possible %>
                                        </li>
                                        <% if (assignment.due_date) { %>
                                            <li class="mb-2">
                                                <strong>Due Date:</strong> <%= new Date(assignment.due_date).toLocaleString() %>
                                            </li>
                                        <% } %>
                                        <% if (assignment.available_from) { %>
                                            <li class="mb-2">
                                                <strong>Available From:</strong> <%= new Date(assignment.available_from).toLocaleString() %>
                                            </li>
                                        <% } %>
                                        <% if (assignment.available_until) { %>
                                            <li class="mb-2">
                                                <strong>Available Until:</strong> <%= new Date(assignment.available_until).toLocaleString() %>
                                            </li>
                                        <% } %>
                                        <li class="mb-2">
                                            <strong>Late Submissions:</strong>
                                            <%= assignment.allow_late_submissions ? 'Allowed' : 'Not Allowed' %>
                                        </li>
                                        <% if (assignment.allow_late_submissions && assignment.late_submission_deduction > 0) { %>
                                            <li>
                                                <strong>Late Deduction:</strong> <%= assignment.late_submission_deduction %>%
                                            </li>
                                        <% } %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Submissions Table -->
            <div class="card">
                <div class="card-header bg-white">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="mb-0">Student Submissions</h5>
                        </div>
                        <div class="col-auto">
                            <div class="input-group">
                                <input type="text" class="form-control" id="searchInput" placeholder="Search students...">
                                <button class="btn btn-outline-secondary" type="button">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Student</th>
                                <th>Submission Date</th>
                                <th>Status</th>
                                <th>File</th>
                                <th>Score</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (submissions && submissions.length > 0) { %>
                                <% submissions.forEach(submission => { %>
                                    <tr>
                                        <td><%= submission.first_name %> <%= submission.last_name %></td>
                                        <td><%= new Date(submission.submitted_at).toLocaleString() %></td>
                                        <td>
                                            <% if (submission.is_late) { %>
                                                <span class="badge bg-warning">Late</span>
                                            <% } else { %>
                                                <span class="badge bg-success">On Time</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (submission.file_url) { %>
                                                <a href="<%= submission.file_url %>" target="_blank" class="text-decoration-none">
                                                    <i class="fas fa-file me-1"></i> View
                                                </a>
                                            <% } else if (submission.content) { %>
                                                <span class="text-muted">Text submission</span>
                                            <% } else { %>
                                                <span class="text-muted">No file</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (submission.score !== null) { %>
                                                <%= submission.score %> / <%= assignment.points_possible %>
                                            <% } else { %>
                                                <span class="text-muted">Not graded</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/instructor/modules/<%= module.module_id %>/assignments/<%= assignment.assignment_id %>/submissions/<%= submission.submission_id %>" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye me-1"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="text-center">No submissions yet</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Grade Modal -->
<div class="modal fade" id="gradeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Grade Submission</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/instructor/modules/<%= module.module_id %>/assignments/<%= assignment.assignment_id %>/submissions/grade" method="POST">
                <div class="modal-body">
                    <input type="hidden" name="submission_id" id="gradeSubmissionId">
                    <div class="mb-3">
                        <label class="form-label">Student</label>
                        <input type="text" class="form-control" id="gradeStudentName" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Score</label>
                        <div class="input-group">
                            <input type="number" class="form-control" name="score" min="0" max="<%= assignment.points_possible %>" step="0.1" required>
                            <span class="input-group-text">/ <%= assignment.points_possible %></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Feedback</label>
                        <textarea class="form-control" name="feedback" rows="4"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Grade</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Bulk Grade Modal -->
<div class="modal fade" id="bulkGradeModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bulk Grade Submissions</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/instructor/modules/<%= module.module_id %>/assignments/<%= assignment.assignment_id %>/submissions/bulk-grade" method="POST">
                <div class="modal-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Select the submissions you want to grade and enter a common score and feedback.
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Score</label>
                        <div class="input-group">
                            <input type="number" class="form-control" name="score" min="0" max="<%= assignment.points_possible %>" step="0.1" required>
                            <span class="input-group-text">/ <%= assignment.points_possible %></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Feedback</label>
                        <textarea class="form-control" name="feedback" rows="4"></textarea>
                    </div>
                    <input type="hidden" name="submission_ids" id="bulkSubmissionIds">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Grades</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Export Modal -->
<div class="modal fade" id="exportModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Export Submissions</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Export Format</label>
                    <select class="form-select" id="exportFormat">
                        <option value="csv">CSV</option>
                        <option value="excel">Excel</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Include</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="includeFeedback" checked>
                        <label class="form-check-label" for="includeFeedback">
                            Feedback
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="includeSubmissionDate" checked>
                        <label class="form-check-label" for="includeSubmissionDate">
                            Submission Date
                        </label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="exportButton">
                    <i class="fas fa-download me-2"></i>Export
                </button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });

    // Handle grade modal
    const gradeModal = document.getElementById('gradeModal');
    if (gradeModal) {
        gradeModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const submissionId = button.getAttribute('data-submission-id');
            const studentName = button.getAttribute('data-student-name');
            
            document.getElementById('gradeSubmissionId').value = submissionId;
            document.getElementById('gradeStudentName').value = studentName;
        });
    }

    // Handle select all checkbox
    const selectAll = document.getElementById('selectAll');
    const submissionCheckboxes = document.querySelectorAll('.submission-checkbox');
    
    if (selectAll) {
        selectAll.addEventListener('change', function() {
            submissionCheckboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
            updateBulkGradeButton();
        });
    }

    // Handle individual checkboxes
    submissionCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            updateBulkGradeButton();
        });
    });

    // Update bulk grade button state
    function updateBulkGradeButton() {
        const checkedBoxes = document.querySelectorAll('.submission-checkbox:checked');
        const bulkGradeButton = document.querySelector('[data-bs-target="#bulkGradeModal"]');
        
        if (checkedBoxes.length > 0) {
            bulkGradeButton.disabled = false;
            document.getElementById('bulkSubmissionIds').value = Array.from(checkedBoxes)
                .map(cb => cb.value)
                .join(',');
        } else {
            bulkGradeButton.disabled = true;
        }
    }

    // Handle search functionality
    const searchInput = document.getElementById('searchInput');
    if (searchInput) {
        searchInput.addEventListener('keyup', function() {
            const searchText = this.value.toLowerCase();
            const rows = document.querySelectorAll('tbody tr');
            
            rows.forEach(row => {
                const studentName = row.querySelector('td:nth-child(2)').textContent.toLowerCase();
                row.style.display = studentName.includes(searchText) ? '' : 'none';
            });
        });
    }

    // Handle export functionality
    const exportButton = document.getElementById('exportButton');
    if (exportButton) {
        exportButton.addEventListener('click', function() {
            const format = document.getElementById('exportFormat').value;
            const includeFeedback = document.getElementById('includeFeedback').checked;
            const includeSubmissionDate = document.getElementById('includeSubmissionDate').checked;
            
            // Here you would typically make an AJAX call to your export endpoint
            window.location.href = `/instructor/modules/<%= module.module_id %>/assignments/<%= assignment.assignment_id %>/export?format=${format}&includeFeedback=${includeFeedback}&includeSubmissionDate=${includeSubmissionDate}`;
        });
    }
});
</script>

