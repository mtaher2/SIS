<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-2">My Profile</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">My Profile</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-4 text-end">
            <a href="/instructor/update-profile" class="btn btn-primary">
                <i class="fas fa-edit me-1"></i> Edit Profile
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Personal Information -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i> Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="avatar avatar-xl mx-auto">
                            <% if (user.profile_image) { %>
                                <img src="<%= user.profile_image %>" alt="Profile Image" class="img-fluid rounded-circle">
                            <% } else { %>
                                <div class="avatar-initial rounded-circle bg-light text-dark">
                                    <%= user.first_name.charAt(0) %><%= user.last_name.charAt(0) %>
                                </div>
                            <% } %>
                        </div>
                        <h3 class="mt-3"><%= user.first_name %> <%= user.last_name %></h3>
                        <p class="text-muted"><%= profile.department || 'No Department' %></p>
                    </div>

                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-envelope me-2"></i> Email</span>
                            <span class="text-muted"><%= user.email %></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-user-circle me-2"></i> Username</span>
                            <span class="text-muted"><%= user.username %></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-phone me-2"></i> Phone</span>
                            <span class="text-muted"><%= profile.phone || 'Not provided' %></span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Academic Information -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-graduation-cap me-2"></i> Academic Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">Department</h6>
                                    <h4><%= profile.department || 'Not specified' %></h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">Office Location</h6>
                                    <h4><%= profile.office_location || 'Not specified' %></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card border-0 bg-light">
                        <div class="card-body">
                            <h6 class="text-muted mb-2">Office Hours</h6>
                            <p class="mb-0"><%= profile.office_hours || 'Not specified' %></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Courses Information -->
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-book me-2"></i> Teaching Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">Assigned Courses</h6>
                                    <h4><%= locals.courseCount !== undefined ? courseCount : 'N/A' %></h4>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">Total Students</h6>
                                    <h4><%= locals.studentCount !== undefined ? studentCount : 'N/A' %></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-grid gap-2 mt-3">
                        <a href="/instructor/courses" class="btn btn-primary">
                            <i class="fas fa-book-open me-2"></i> View My Courses
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 