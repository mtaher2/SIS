<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-2">Module Quizzes</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses">My Courses</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses/<%= course.course_id %>"><%= course.title %></a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses/<%= course.course_id %>/modules">Modules</a></li>
                    <li class="breadcrumb-item active">Quizzes</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-4 text-end">
            <a href="/instructor/modules/<%= module.module_id %>/quizzes/create" class="btn btn-primary">
                <i class="fas fa-plus-circle me-1"></i> Create Quiz
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-question-circle me-2"></i> Quizzes - <%= module.title %></h5>
        </div>
        <div class="card-body">
            <% if (quizzes && quizzes.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Points</th>
                                <th>Availability</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% quizzes.forEach(quiz => { %>
                                <tr>
                                    <td>
                                        <a href="/instructor/modules/<%= module.module_id %>/quizzes/<%= quiz.quiz_id %>">
                                            <%= quiz.title %>
                                        </a>
                                        <% if (quiz.description) { %>
                                            <div class="small text-muted"><%= quiz.description.substring(0, 100) %><%= quiz.description.length > 100 ? '...' : '' %></div>
                                        <% } %>
                                    </td>
                                    <td><%= quiz.points_possible %> pts</td>
                                    <td>
                                        <% if (quiz.start_date && quiz.end_date) { %>
                                            <div>From: <%= new Date(quiz.start_date).toLocaleDateString() %></div>
                                            <div>To: <%= new Date(quiz.end_date).toLocaleDateString() %></div>
                                        <% } else if (quiz.start_date) { %>
                                            <div>From: <%= new Date(quiz.start_date).toLocaleDateString() %></div>
                                            <div>No end date</div>
                                        <% } else if (quiz.end_date) { %>
                                            <div>Until: <%= new Date(quiz.end_date).toLocaleDateString() %></div>
                                        <% } else { %>
                                            <span class="text-muted">Always available</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (quiz.published) { %>
                                            <span class="badge bg-success">Published</span>
                                        <% } else { %>
                                            <span class="badge bg-warning text-dark">Unpublished</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end">
                                            <a href="/instructor/modules/<%= module.module_id %>/quizzes/<%= quiz.quiz_id %>" class="btn btn-sm btn-primary me-1" title="View">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/instructor/modules/<%= module.module_id %>/quizzes/<%= quiz.quiz_id %>/edit" class="btn btn-sm btn-warning me-1" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="/instructor/modules/<%= module.module_id %>/quizzes/<%= quiz.quiz_id %>/questions" class="btn btn-sm btn-info me-1" title="Questions">
                                                <i class="fas fa-list-ol"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger" title="Delete" 
                                                    onclick="confirmDeleteQuiz('<%= module.module_id %>', '<%= quiz.quiz_id %>', '<%= quiz.title %>')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i> No quizzes have been created for this module yet.
                    <a href="/instructor/modules/<%= module.module_id %>/quizzes/create">Create your first quiz</a>.
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteQuizModal" tabindex="-1" aria-labelledby="deleteQuizModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteQuizModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the quiz "<span id="quizTitle"></span>"?</p>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i> This action will delete all questions and student attempts. This action cannot be undone.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteQuizForm" action="" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">Delete Quiz</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDeleteQuiz(moduleId, quizId, title) {
        document.getElementById('quizTitle').textContent = title;
        document.getElementById('deleteQuizForm').action = `/instructor/modules/${moduleId}/quizzes/${quizId}`;
        
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteQuizModal'));
        deleteModal.show();
    }
</script> 