<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-2"><%= quiz.title %></h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses">My Courses</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses/<%= course.course_id %>"><%= course.title %></a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses/<%= course.course_id %>/modules">Modules</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/modules/<%= module.module_id %>/quizzes">Quizzes</a></li>
                    <li class="breadcrumb-item active"><%= quiz.title %></li>
                </ol>
            </nav>
        </div>
        <div class="col-md-4 text-end">
            <div class="btn-group">
                <a href="/instructor/modules/<%= module.module_id %>/quizzes/<%= quiz.quiz_id %>/edit" class="btn btn-outline-primary">
                    <i class="fas fa-edit me-1"></i> Edit Quiz
                </a>
                <a href="/instructor/modules/<%= module.module_id %>/quizzes" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Back to Quizzes
                </a>
            </div>
        </div>
    </div>

    <!-- Quiz Info Card -->
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i> Quiz Information</h5>
            <div>
                <% if (quiz.published) { %>
                    <span class="badge bg-success me-2">Published</span>
                <% } else { %>
                    <span class="badge bg-secondary me-2">Draft</span>
                <% } %>
                <button class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#publishModal">
                    <%= quiz.published ? 'Unpublish' : 'Publish' %>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <% if (quiz.description) { %>
                        <div class="mb-3">
                            <h6 class="fw-bold">Description:</h6>
                            <div><%= quiz.description %></div>
                        </div>
                    <% } %>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2"><strong>Points:</strong> <%= quiz.points_possible %></li>
                                <% if (quiz.time_limit) { %>
                                    <li class="mb-2"><strong>Time Limit:</strong> <%= quiz.time_limit %> minutes</li>
                                <% } %>
                                <li class="mb-2"><strong>Attempts:</strong> <%= quiz.allowed_attempts %></li>
                                <% if (quiz.start_date) { %>
                                    <li class="mb-2"><strong>Available From:</strong> <%= new Date(quiz.start_date).toLocaleString() %></li>
                                <% } %>
                                <% if (quiz.end_date) { %>
                                    <li class="mb-2"><strong>Available Until:</strong> <%= new Date(quiz.end_date).toLocaleString() %></li>
                                <% } %>
                                <li class="mb-2"><strong>Shuffle Questions:</strong> <%= quiz.shuffle_questions ? 'Yes' : 'No' %></li>
                                <li class="mb-2"><strong>Shuffle Answers:</strong> <%= quiz.shuffle_answers ? 'Yes' : 'No' %></li>
                                <li><strong>Show Correct Answers:</strong> <%= quiz.show_correct_answers ? 'Yes' : 'No' %></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quiz Questions -->
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-question-circle me-2"></i> Questions</h5>
            <button class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#addQuestionModal">
                <i class="fas fa-plus me-1"></i> Add Question
            </button>
        </div>
        <div class="card-body">
            <% if (quiz.questions && quiz.questions.length > 0) { %>
                <div class="list-group">
                    <% quiz.questions.forEach((question, index) => { %>
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="mb-1">Question <%= index + 1 %> (<%= question.points %> points)</h5>
                                    <p class="mb-1"><%= question.question_text %></p>
                                    
                                    <% if (question.question_type === 'multiple_choice') { %>
                                        <div class="ms-3 mt-2">
                                            <% question.answers.forEach(answer => { %>
                                                <div class="form-check mb-1">
                                                    <input class="form-check-input" type="radio" disabled <%= answer.is_correct ? 'checked' : '' %>>
                                                    <label class="form-check-label <%= answer.is_correct ? 'text-success fw-bold' : '' %>">
                                                        <%= answer.answer_text %>
                                                    </label>
                                                </div>
                                            <% }) %>
                                        </div>
                                    <% } else if (question.question_type === 'multiple_answer') { %>
                                        <div class="ms-3 mt-2">
                                            <% question.answers.forEach(answer => { %>
                                                <div class="form-check mb-1">
                                                    <input class="form-check-input" type="checkbox" disabled <%= answer.is_correct ? 'checked' : '' %>>
                                                    <label class="form-check-label <%= answer.is_correct ? 'text-success fw-bold' : '' %>">
                                                        <%= answer.answer_text %>
                                                    </label>
                                                </div>
                                            <% }) %>
                                        </div>
                                    <% } else if (question.question_type === 'true_false') { %>
                                        <div class="ms-3 mt-2">
                                            <div class="form-check mb-1">
                                                <input class="form-check-input" type="radio" disabled <%= question.correct_answer === 'true' ? 'checked' : '' %>>
                                                <label class="form-check-label <%= question.correct_answer === 'true' ? 'text-success fw-bold' : '' %>">
                                                    True
                                                </label>
                                            </div>
                                            <div class="form-check mb-1">
                                                <input class="form-check-input" type="radio" disabled <%= question.correct_answer === 'false' ? 'checked' : '' %>>
                                                <label class="form-check-label <%= question.correct_answer === 'false' ? 'text-success fw-bold' : '' %>">
                                                    False
                                                </label>
                                            </div>
                                        </div>
                                    <% } else if (question.question_type === 'short_answer') { %>
                                        <div class="ms-3 mt-2">
                                            <em>Short Answer Question</em>
                                            <% if (question.correct_answer) { %>
                                                <div class="mt-1 text-success">
                                                    <strong>Correct Answer:</strong> <%= question.correct_answer %>
                                                </div>
                                            <% } %>
                                        </div>
                                    <% } else if (question.question_type === 'essay') { %>
                                        <div class="ms-3 mt-2">
                                            <em>Essay Question</em>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="d-flex">
                                    <button class="btn btn-sm btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#editQuestionModal<%= question.question_id %>">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteQuestionModal<%= question.question_id %>">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i> This quiz doesn't have any questions yet.
                    Click the "Add Question" button to start adding questions.
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Publish/Unpublish Modal -->
<div class="modal fade" id="publishModal" tabindex="-1" aria-labelledby="publishModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="publishModalLabel"><%= quiz.published ? 'Unpublish' : 'Publish' %> Quiz</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to <%= quiz.published ? 'unpublish' : 'publish' %> this quiz?</p>
                <% if (!quiz.published) { %>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i> Publishing will make this quiz visible to students.
                    </div>
                <% } else { %>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i> Unpublishing will hide this quiz from students.
                    </div>
                <% } %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form action="/instructor/modules/<%= module.module_id %>/quizzes/<%= quiz.quiz_id %>/toggle-publish" method="POST">
                    <button type="submit" class="btn <%= quiz.published ? 'btn-warning' : 'btn-success' %>">
                        <%= quiz.published ? 'Unpublish' : 'Publish' %>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

