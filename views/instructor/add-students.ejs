<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-2">Add Students to Course</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses">My Courses</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses/<%= course.course_id %>"><%= course.course_code %></a></li>
                    <li class="breadcrumb-item active">Add Students</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i> Add Students to <%= course.title %>
                    </h5>
                </div>

                <div class="card-body">
                    <% if (locals.success_msg) { %>
                        <div class="alert alert-success">
                            <%= success_msg %>
                        </div>
                    <% } %>
                    
                    <% if (locals.error_msg) { %>
                        <div class="alert alert-danger">
                            <%= error_msg %>
                        </div>
                    <% } %>

                    <!-- Search Students -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="mb-0">Search Students</h6>
                        </div>
                        <div class="card-body">
                            <form action="/instructor/courses/<%= course.course_id %>/add-students" method="GET" class="row g-3">
                                <div class="col-md-8">
                                    <input type="text" class="form-control" id="search" name="search" 
                                        placeholder="Search by name, email, or student ID" value="<%= locals.search || '' %>">
                                </div>
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="fas fa-search me-2"></i> Search
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Available Students -->
                    <form action="/instructor/courses/<%= course.course_id %>/add-students" method="POST">
                        <div class="card mb-4">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">Available Students</h6>
                                <span class="badge bg-info"><%= availableStudents ? availableStudents.length : 0 %> students found</span>
                            </div>
                            <div class="card-body">
                                <% if (availableStudents && availableStudents.length > 0) { %>
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th style="width: 50px;">
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" id="selectAll">
                                                        </div>
                                                    </th>
                                                    <th>Name</th>
                                                    <th>Student ID</th>
                                                    <th>Email</th>
                                                    <th>Current Courses</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% availableStudents.forEach(student => { %>
                                                    <tr>
                                                        <td>
                                                            <div class="form-check">
                                                                <input class="form-check-input student-checkbox" type="checkbox" name="student_ids[]" value="<%= student.user_id %>">
                                                            </div>
                                                        </td>
                                                        <td><%= student.first_name %> <%= student.last_name %></td>
                                                        <td><%= student.student_id || 'N/A' %></td>
                                                        <td><%= student.email %></td>
                                                        <td><%= student.course_count || 0 %></td>
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                <% } else { %>
                                    <div class="alert alert-info">
                                        <i class="fas fa-info-circle me-2"></i> No students found. Try a different search term or add new students.
                                    </div>
                                <% } %>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a href="/instructor/courses/<%= course.course_id %>" class="btn btn-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-success" <%= !availableStudents || availableStudents.length === 0 ? 'disabled' : '' %>>
                                <i class="fas fa-plus-circle me-2"></i> Add Selected Students
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const selectAllCheckbox = document.getElementById('selectAll');
        const studentCheckboxes = document.querySelectorAll('.student-checkbox');
        
        // Select all functionality
        if (selectAllCheckbox) {
            selectAllCheckbox.addEventListener('change', function() {
                studentCheckboxes.forEach(checkbox => {
                    checkbox.checked = selectAllCheckbox.checked;
                });
            });
        }
        
        // Update select all checkbox when individual checkboxes change
        studentCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const allChecked = Array.from(studentCheckboxes).every(cb => cb.checked);
                const anyChecked = Array.from(studentCheckboxes).some(cb => cb.checked);
                
                if (selectAllCheckbox) {
                    selectAllCheckbox.checked = allChecked;
                    selectAllCheckbox.indeterminate = anyChecked && !allChecked;
                }
            });
        });
    });
</script> 