<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-2">Add Course Material</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses">My Courses</a></li>
                    <li class="breadcrumb-item"><a href="/instructor/courses/<%= course.course_id %>"><%= course.course_code %></a></li>
                    <li class="breadcrumb-item active">Add Material</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-file-upload me-2"></i> Add New Material to <%= course.title %>
                    </h5>
                </div>

                <div class="card-body">
                    <% if (locals.errors && errors.length > 0) { %>
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                <% errors.forEach(error => { %>
                                    <li><%= error.msg %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>

                    <form action="/instructor/courses/<%= course.course_id %>/add-material" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="title" class="form-label">Material Title</label>
                            <input type="text" class="form-control" id="title" name="title" 
                                value="<%= locals.formData ? formData.title : '' %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="3"><%= locals.formData ? formData.description : '' %></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Material Type</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="material_type" id="type_file" value="file" 
                                    <%= !locals.formData || formData.material_type === 'file' ? 'checked' : '' %>>
                                <label class="form-check-label" for="type_file">
                                    File Upload
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="material_type" id="type_link" value="link"
                                    <%= locals.formData && formData.material_type === 'link' ? 'checked' : '' %>>
                                <label class="form-check-label" for="type_link">
                                    External Link
                                </label>
                            </div>
                        </div>

                        <div id="file-upload" class="mb-3">
                            <label for="file" class="form-label">Upload File</label>
                            <input class="form-control" type="file" id="file" name="file">
                            <div class="form-text">Supported file types: PDF, DOC, DOCX, PPT, PPTX, XLS, XLSX, ZIP, RAR, TXT, etc.</div>
                        </div>

                        <div id="link-input" class="mb-3" style="display: none;">
                            <label for="link_url" class="form-label">External Link URL</label>
                            <input type="url" class="form-control" id="link_url" name="link_url" 
                                value="<%= locals.formData ? formData.link_url : '' %>" placeholder="https://example.com">
                        </div>

                        <div class="d-flex mt-4">
                            <button type="submit" class="btn btn-primary me-2">Add Material</button>
                            <a href="/instructor/courses/<%= course.course_id %>" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const typeFileRadio = document.getElementById('type_file');
        const typeLinkRadio = document.getElementById('type_link');
        const fileUploadDiv = document.getElementById('file-upload');
        const linkInputDiv = document.getElementById('link-input');
        
        function updateVisibility() {
            if (typeFileRadio.checked) {
                fileUploadDiv.style.display = 'block';
                linkInputDiv.style.display = 'none';
            } else {
                fileUploadDiv.style.display = 'none';
                linkInputDiv.style.display = 'block';
            }
        }
        
        // Initial update
        updateVisibility();
        
        // Update whenever selection changes
        typeFileRadio.addEventListener('change', updateVisibility);
        typeLinkRadio.addEventListener('change', updateVisibility);
    });
</script> 