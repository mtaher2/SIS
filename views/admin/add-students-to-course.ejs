<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-2">Add Students to Course</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Admin Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/admin/courses">Courses</a></li>
                    <li class="breadcrumb-item"><a href="/admin/courses/<%= course.course_id %>/students">Manage Students</a></li>
                    <li class="breadcrumb-item active">Add Students</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-book me-2"></i> <%= course.title %> (<%= course.course_code %>)</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <p><strong>Instructor:</strong> <%= course.instructor_name || 'Not assigned' %></p>
                        </div>
                        <div class="col-md-4">
                            <p><strong>Semester:</strong> <%= course.semester_name || 'Not specified' %></p>
                        </div>
                        <div class="col-md-4">
                            <p><strong>Students Enrolled:</strong> <span class="badge bg-info"><%= enrolledCount || 0 %></span></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i> Add Students to Course
                    </h5>
                </div>

                <div class="card-body">
                    <% if (locals.success_msg) { %>
                        <div class="alert alert-success">
                            <%= success_msg %>
                        </div>
                    <% } %>
                    
                    <% if (locals.error_msg) { %>
                        <div class="alert alert-danger">
                            <%= error_msg %>
                        </div>
                    <% } %>

                    <!-- Search Students -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="mb-0">Search Students</h6>
                        </div>
                        <div class="card-body">
                            <form action="/admin/courses/<%= course.course_id %>/add-students" method="GET" class="row g-3">
                                <div class="col-md-4">
                                    <input type="text" class="form-control" id="search" name="search" 
                                        placeholder="Name, email, or ID" value="<%= locals.search || '' %>">
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" id="status" name="status">
                                        <option value="">All Statuses</option>
                                        <option value="active" <%= locals.status === 'active' ? 'selected' : '' %>>Active</option>
                                        <option value="inactive" <%= locals.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <select class="form-select" id="enrollment" name="enrollment">
                                        <option value="">All Students</option>
                                        <option value="not_enrolled" <%= locals.enrollment === 'not_enrolled' ? 'selected' : '' %>>Not Enrolled</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="fas fa-search me-2"></i> Search
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Available Students -->
                    <form action="/admin/courses/<%= course.course_id %>/add-students" method="POST">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th style="width: 50px;">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="selectAll">
                                            </div>
                                        </th>
                                        <th>Name</th>
                                        <th>Student ID</th>
                                        <th>Email</th>
                                        <th>Status</th>
                                        <th>Current Courses</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (students && students.length > 0) { %>
                                        <% students.forEach(student => { %>
                                            <tr>
                                                <td>
                                                    <div class="form-check">
                                                        <input class="form-check-input student-checkbox" type="checkbox" 
                                                            name="student_ids[]" value="<%= student.user_id %>"
                                                            <%= student.is_enrolled ? 'disabled checked' : '' %>>
                                                    </div>
                                                </td>
                                                <td><%= student.first_name %> <%= student.last_name %></td>
                                                <td><%= student.student_id || 'N/A' %></td>
                                                <td><%= student.email %></td>
                                                <td>
                                                    <% if (student.is_active) { %>
                                                        <span class="badge bg-success">Active</span>
                                                    <% } else { %>
                                                        <span class="badge bg-danger">Inactive</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (student.is_enrolled) { %>
                                                        <span class="badge bg-info">Already Enrolled</span>
                                                    <% } else { %>
                                                        <%= student.course_count || 0 %>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="6" class="text-center">
                                                No students found. Try a different search term.
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                        <div class="d-flex justify-content-between mt-3">
                            <div>
                                <% if (students && students.length > 0) { %>
                                    <span class="text-muted"><%= students.length %> students found</span>
                                <% } %>
                            </div>
                            <div>
                                <a href="/admin/courses/<%= course.course_id %>/students" class="btn btn-secondary me-2">Cancel</a>
                                <button type="submit" class="btn btn-success" <%= !students || students.length === 0 ? 'disabled' : '' %>>
                                    <i class="fas fa-plus-circle me-2"></i> Add Selected Students
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const selectAllCheckbox = document.getElementById('selectAll');
        const studentCheckboxes = document.querySelectorAll('.student-checkbox:not([disabled])');
        
        // Select all functionality
        if (selectAllCheckbox) {
            selectAllCheckbox.addEventListener('change', function() {
                studentCheckboxes.forEach(checkbox => {
                    checkbox.checked = selectAllCheckbox.checked;
                });
            });
        }
        
        // Update select all checkbox when individual checkboxes change
        studentCheckboxes.forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const allChecked = Array.from(studentCheckboxes).every(cb => cb.checked);
                const anyChecked = Array.from(studentCheckboxes).some(cb => cb.checked);
                
                if (selectAllCheckbox) {
                    selectAllCheckbox.checked = allChecked;
                    selectAllCheckbox.indeterminate = anyChecked && !allChecked;
                }
            });
        });
    });
</script> 