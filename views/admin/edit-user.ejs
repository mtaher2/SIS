<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i> Edit User: <%= userData.first_name %> <%= userData.last_name %>
                    </h5>
                </div>

                <div class="card-body">
                    <% if (locals.errors && errors.length > 0) { %>
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                <% errors.forEach(error => { %>
                                    <li><%= error.msg %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>

                    <form action="/admin/users/edit/<%= userData.user_id %>" method="POST">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="first_name" class="form-label">First Name</label>
                                <input type="text" class="form-control" id="first_name" name="first_name" 
                                    value="<%= locals.formData ? formData.first_name : userData.first_name %>" required>
                            </div>
                            <div class="col-md-6">
                                <label for="last_name" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="last_name" name="last_name"
                                    value="<%= locals.formData ? formData.last_name : userData.last_name %>" required>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email"
                                    value="<%= locals.formData ? formData.email : userData.email %>" required>
                            </div>
                            <div class="col-md-6">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="username" name="username"
                                    value="<%= userData.username %>" disabled>
                                <div class="form-text">Username cannot be changed.</div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="role" class="form-label">Role</label>
                                <input type="text" class="form-control" id="role" 
                                    value="<%= userData.role %>" disabled>
                                <div class="form-text">Role cannot be changed.</div>
                            </div>
                            <div class="col-md-6">
                                <label for="is_active" class="form-label">Account Status</label>
                                <select class="form-select" id="is_active" name="is_active" required>
                                    <option value="true" 
                                        <%= (locals.formData ? formData.is_active === 'true' : userData.is_active) ? 'selected' : '' %>>
                                        Active
                                    </option>
                                    <option value="false" 
                                        <%= (locals.formData ? formData.is_active === 'false' : !userData.is_active) ? 'selected' : '' %>>
                                        Inactive
                                    </option>
                                </select>
                            </div>
                        </div>

                        <!-- Role-specific fields -->
                        <% if (userData.role === 'student' && profileData) { %>
                            <hr>
                            <h5 class="mb-3">Student Information</h5>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="student_id" class="form-label">Student ID</label>
                                    <input type="text" class="form-control" id="student_id" name="student_id"
                                        value="<%= locals.formData ? formData.student_id : profileData.student_id %>" readonly>
                                </div>
                                <div class="col-md-6">
                                    <label for="current_semester" class="form-label">Current Semester</label>
                                    <input type="number" class="form-control" id="current_semester" name="current_semester"
                                        value="<%= locals.formData ? formData.current_semester : profileData.current_semester %>" min="1">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="date_of_birth" class="form-label">Date of Birth</label>
                                    <input type="date" class="form-control" id="date_of_birth" name="date_of_birth"
                                        value="<%= locals.formData ? formData.date_of_birth : (profileData.date_of_birth ? profileData.date_of_birth.toISOString().split('T')[0] : '') %>">
                                </div>
                                <div class="col-md-6">
                                    <label for="phone" class="form-label">Phone Number</label>
                                    <input type="text" class="form-control" id="phone" name="phone"
                                        value="<%= locals.formData ? formData.phone : profileData.phone || '' %>">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="address" class="form-label">Address</label>
                                <textarea class="form-control" id="address" name="address" rows="2"><%= locals.formData ? formData.address : profileData.address || '' %></textarea>
                            </div>
                        <% } else if (userData.role === 'instructor' && profileData) { %>
                            <hr>
                            <h5 class="mb-3">Instructor Information</h5>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="department" class="form-label">Department</label>
                                    <input type="text" class="form-control" id="department" name="department"
                                        value="<%= locals.formData ? formData.department : profileData.department %>">
                                </div>
                                <div class="col-md-6">
                                    <label for="office_location" class="form-label">Office Location</label>
                                    <input type="text" class="form-control" id="office_location" name="office_location"
                                        value="<%= locals.formData ? formData.office_location : profileData.office_location || '' %>">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="office_hours" class="form-label">Office Hours</label>
                                <textarea class="form-control" id="office_hours" name="office_hours" rows="2"><%= locals.formData ? formData.office_hours : profileData.office_hours || '' %></textarea>
                            </div>
                        <% } %>

                        <div class="d-flex mt-4">
                            <button type="submit" class="btn btn-primary me-2">Update User</button>
                            <a href="/admin/users" class="btn btn-secondary me-2">Cancel</a>
                            
                            <% if (userData.user_id !== user.user_id) { %>
                                <a href="/admin/users/reset-password/<%= userData.user_id %>" class="btn btn-warning me-2">
                                    <i class="fas fa-key me-1"></i> Reset Password
                                </a>
                                <button type="button" class="btn btn-danger ms-auto"
                                    onclick="confirmDelete('/admin/users/delete/<%= userData.user_id %>')">
                                    <i class="fas fa-trash me-1"></i> Delete User
                                </button>
                            <% } %>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm User Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this user? This action cannot be undone and will remove all data associated with this user.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(url) {
        document.getElementById('deleteForm').action = url;
        new bootstrap.Modal(document.getElementById('deleteModal')).show();
    }
</script>

