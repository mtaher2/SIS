<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-bullhorn me-2"></i> Announcement Details
                    </h5>
                    <div>
                        <a href="/admin/announcements/edit/<%= announcement.announcement_id %>" class="btn btn-sm btn-warning me-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="/admin/announcements" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <h4 class="mb-3"><%= announcement.title %></h4>
                    
                    <div class="mb-4">
                        <span class="badge bg-secondary me-2">
                            <i class="fas fa-clock me-1"></i> <%= new Date(announcement.created_at).toLocaleString() %>
                        </span>
                        
                        <span class="badge bg-<%= announcement.is_active ? 'success' : 'danger' %> me-2">
                            <%= announcement.is_active ? 'Active' : 'Inactive' %>
                        </span>
                        
                        <% if (announcement.is_spam) { %>
                            <span class="badge bg-danger">
                                <i class="fas fa-exclamation-triangle me-1"></i> Flagged as Spam (<%= Math.round(announcement.spam_confidence * 100) %>%)
                            </span>
                        <% } %>
                    </div>
                    
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">Author Information</h6>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">
                                <strong>Author:</strong> <%= announcement.author_name %>
                            </p>
                            <p class="mb-0">
                                <strong>Role:</strong> <%= announcement.role_name %>
                            </p>
                        </div>
                    </div>
                    
                    <div class="card mb-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">Target Audience</h6>
                        </div>
                        <div class="card-body">
                            <% if (announcement.target_type === 'all') { %>
                                <span class="badge bg-info">All Users</span>
                            <% } else if (announcement.target_type === 'students') { %>
                                <span class="badge bg-success">All Students</span>
                            <% } else if (announcement.target_type === 'instructors') { %>
                                <span class="badge bg-primary">All Instructors</span>
                            <% } else if (announcement.target_type === 'course') { %>
                                <span class="badge bg-warning">
                                    <i class="fas fa-book me-1"></i> Course: <%= announcement.course_code %> - <%= announcement.course_title %>
                                </span>
                            <% } else if (announcement.target_type === 'specific_users') { %>
                                <span class="badge bg-dark">Specific Users</span>
                                
                                <% if (announcement.recipients && announcement.recipients.length > 0) { %>
                                    <div class="mt-3">
                                        <table class="table table-sm table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Role</th>
                                                    <th>Email</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% announcement.recipients.forEach(recipient => { %>
                                                    <tr>
                                                        <td><%= recipient.full_name %></td>
                                                        <td><%= recipient.role_name %></td>
                                                        <td><%= recipient.email %></td>
                                                    </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                <% } %>
                            <% } %>
                        </div>
                    </div>
                    
                    <div class="card">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">Content</h6>
                        </div>
                        <div class="card-body">
                            <div class="announcement-content">
                                <%= announcement.content %>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-end mt-4">
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="fas fa-trash-alt me-1"></i> Delete Announcement
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this announcement? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form action="/admin/announcements/delete/<%= announcement.announcement_id %>" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div> 