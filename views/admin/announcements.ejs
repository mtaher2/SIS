<div class="container mt-4">
    <div class="row mb-4 align-items-center">
        <div class="col-md-8">
            <h1 class="mb-2">Announcement Management</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Admin Dashboard</a></li>
                    <li class="breadcrumb-item active">Announcement Management</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-4 text-end">
            <a href="/admin/announcements/create" class="btn btn-success">
                <i class="fas fa-bullhorn me-1"></i> Create New Announcement
            </a>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form action="/admin/announcements" method="GET" class="row g-3">
                <div class="col-md-4">
                    <label for="search" class="form-label">Search</label>
                    <input type="text" class="form-control" id="search" name="search" 
                           placeholder="Title or content" value="<%= locals.search || '' %>">
                </div>
                <div class="col-md-3">
                    <label for="target_type" class="form-label">Target</label>
                    <select class="form-select" id="target_type" name="target_type">
                        <option value="">All Targets</option>
                        <option value="all" <%= locals.target_type === 'all' ? 'selected' : '' %>>All Users</option>
                        <option value="student" <%= locals.target_type === 'student' ? 'selected' : '' %>>Students</option>
                        <option value="instructor" <%= locals.target_type === 'instructor' ? 'selected' : '' %>>Instructors</option>
                        <option value="course" <%= locals.target_type === 'course' ? 'selected' : '' %>>Courses</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">All Statuses</option>
                        <option value="active" <%= locals.status === 'active' ? 'selected' : '' %>>Active</option>
                        <option value="inactive" <%= locals.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Spam Filter Controls -->
    <div class="mb-4">
        <div class="btn-group" role="group">
            <a href="/admin/announcements" class="btn btn-outline-primary <%= !filters || !filters.is_spam ? 'active' : '' %>">All</a>
            <a href="/admin/announcements?filter=regular" class="btn btn-outline-success <%= filters && filters.is_spam === false ? 'active' : '' %>">Inbox</a>
            <a href="/admin/announcements?filter=spam" class="btn btn-outline-danger <%= filters && filters.is_spam === true ? 'active' : '' %>">Spam</a>
        </div>
    </div>

    <!-- Announcements List -->
    <div class="card">
        <div class="card-body">
            <% if (announcements && announcements.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Target</th>
                                <th>Created By</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Spam</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% announcements.forEach(announcement => { %>
                                <tr>
                                    <td>
                                        <div class="fw-bold"><%= announcement.title %></div>
                                        <div class="small text-muted text-truncate" style="max-width: 300px;">
                                            <%= announcement.content.substring(0, 100) %><%= announcement.content.length > 100 ? '...' : '' %>
                                        </div>
                                    </td>
                                    <td>
                                        <% if (announcement.target_type === 'all') { %>
                                            <span class="badge rounded-pill" style="background-color: var(--primary-color);">All Users</span>
                                        <% } else if (announcement.target_type === 'student') { %>
                                            <span class="badge rounded-pill" style="background-color: var(--secondary-color);">Students</span>
                                        <% } else if (announcement.target_type === 'instructor') { %>
                                            <span class="badge rounded-pill" style="background-color: #ff9800;">Instructors</span>
                                        <% } else if (announcement.target_type === 'course') { %>
                                            <span class="badge rounded-pill" style="background-color: var(--success-color);">Course</span>
                                            <div class="small text-muted"><%= announcement.course_code || 'Unknown Course' %></div>
                                        <% } %>
                                    </td>
                                    <td>
                                        <%= announcement.creator_name || 'Unknown' %>
                                    </td>
                                    <td>
                                        <%= new Date(announcement.created_at).toLocaleDateString() %>
                                    </td>
                                    <td>
                                        <% if (announcement.is_active) { %>
                                            <span class="badge bg-success">Active</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Inactive</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (announcement.is_spam) { %>
                                            <span class="badge bg-danger" title="Confidence: <%= Math.round(announcement.spam_confidence * 100) %>%">Spam</span>
                                        <% } else { %>
                                            <span class="badge bg-success">OK</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="/admin/announcements/edit/<%= announcement.announcement_id %>" class="btn btn-sm btn-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger" 
                                                    onclick="confirmDelete('/admin/announcements/delete/<%= announcement.announcement_id %>', '<%= announcement.title %>')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i> No announcements found. <a href="/admin/announcements/create">Create a new announcement</a>.
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Announcement Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the announcement "<span id="announcementTitle" class="fw-bold"></span>"? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete(url, title) {
    document.getElementById('deleteForm').action = url;
    document.getElementById('announcementTitle').textContent = title;
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}
</script> 