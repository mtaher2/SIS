<div class="container mt-4">
    <div class="row mb-4 align-items-center">
        <div class="col-md-8">
            <h1 class="mb-2">User Management</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Admin Dashboard</a></li>
                    <li class="breadcrumb-item active">User Management</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-4 text-end">
            <a href="/admin/users/create" class="btn btn-success">
                <i class="fas fa-user-plus me-1"></i> Create New User
            </a>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form action="/admin/users" method="GET" class="row g-3">
                <div class="col-md-4">
                    <label for="search" class="form-label">Search</label>
                    <input type="text" class="form-control" id="search" name="search" 
                           placeholder="Name, Email or Username" value="<%= locals.search || '' %>">
                </div>
                <div class="col-md-3">
                    <label for="role" class="form-label">Role</label>
                    <select class="form-select" id="role" name="role">
                        <option value="">All Roles</option>
                        <option value="admin" <%= locals.role === 'admin' ? 'selected' : '' %>>Administrators</option>
                        <option value="instructor" <%= locals.role === 'instructor' ? 'selected' : '' %>>Instructors</option>
                        <option value="student" <%= locals.role === 'student' ? 'selected' : '' %>>Students</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">All Statuses</option>
                        <option value="active" <%= locals.status === 'active' ? 'selected' : '' %>>Active</option>
                        <option value="inactive" <%= locals.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (users && users.length > 0) { %>
                            <% users.forEach(user => { %>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar me-2">
                                                <div class="avatar-initial rounded-circle bg-light text-dark">
                                                    <%= user.first_name.charAt(0) %><%= user.last_name.charAt(0) %>
                                                </div>
                                            </div>
                                            <div>
                                                <%= user.first_name %> <%= user.last_name %>
                                            </div>
                                        </div>
                                    </td>
                                    <td><%= user.username %></td>
                                    <td><%= user.email %></td>
                                    <td>
                                        <% if (user.role === 'admin') { %>
                                            <span class="badge rounded-pill bg-primary">Admin</span>
                                        <% } else if (user.role === 'instructor') { %>
                                            <span class="badge rounded-pill bg-warning text-dark">Instructor</span>
                                        <% } else { %>
                                            <span class="badge rounded-pill bg-info text-dark">Student</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (user.is_active) { %>
                                            <span class="badge bg-success">Active</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Inactive</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end">
                                            <a href="/admin/users/edit/<%= user.user_id %>" class="btn btn-sm btn-primary me-1" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            
                                            <% if (user.user_id !== currentUser.user_id) { %>
                                                <a href="/admin/users/reset-password/<%= user.user_id %>" class="btn btn-sm btn-warning me-1" title="Reset Password">
                                                    <i class="fas fa-key"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-danger" title="Delete"
                                                        onclick="confirmDelete('/admin/users/delete/<%= user.user_id %>', '<%= user.first_name %> <%= user.last_name %>')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            <% } %>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <div class="alert alert-info mb-0">
                                        No users found. <a href="/admin/users/create">Create a new user</a>.
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (locals.totalPages && totalPages > 1) { %>
                <nav aria-label="User pagination" class="d-flex justify-content-center mt-4">
                    <ul class="pagination">
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                                <a class="page-link" href="/admin/users?page=<%= i %><%= locals.search ? '&search=' + search : '' %><%= locals.role ? '&role=' + role : '' %><%= locals.status ? '&status=' + status : '' %>"><%= i %></a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm User Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the user <span id="userName" class="fw-bold"></span>? This action cannot be undone and will remove all data associated with this user.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(url, name) {
        document.getElementById('deleteForm').action = url;
        document.getElementById('userName').textContent = name;
        new bootstrap.Modal(document.getElementById('deleteModal')).show();
    }
</script>