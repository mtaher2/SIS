<div class="container mt-4">
    <div class="row mb-4 align-items-center">
        <div class="col-md-8">
            <h1 class="mb-2">Students in <%= course.title %> (<%= course.course_code %>)</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Admin Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/admin/courses">Course Management</a></li>
                    <li class="breadcrumb-item active">Course Students</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- Search and Filter -->
            <div class="card mb-4">
                <div class="card-body">
                    <form action="/admin/courses/<%= course.course_id %>/students" method="GET" class="row g-3">
                        <div class="col-md-5">
                            <label for="search" class="form-label">Search</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                placeholder="Name, email, ID" value="<%= locals.search || '' %>">
                        </div>
                        <div class="col-md-4">
                            <label for="status" class="form-label">Status</label>
                            <select class="form-select" id="status" name="status">
                                <option value="">All Statuses</option>
                                <option value="active" <%= locals.status === 'active' ? 'selected' : '' %>>Active</option>
                                <option value="dropped" <%= locals.status === 'dropped' ? 'selected' : '' %>>Dropped</option>
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">Filter</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Students List -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Enrolled Students (<%= students && students.filter(s => s.status === 'active').length || 0 %>)</h5>
                    <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#addStudentModal">
                        <i class="fas fa-user-plus me-1"></i> Add Student
                    </button>
                </div>
                <div class="card-body">
                    <% if (students && students.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Student</th>
                                        <th>ID</th>
                                        <th>Enrolled Date</th>
                                        <th>Submissions</th>
                                        <th>Status</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% students.forEach(student => { %>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar me-2 bg-primary rounded">
                                                        <span class="text-white"><%= student.first_name.charAt(0) %><%= student.last_name.charAt(0) %></span>
                                                    </div>
                                                    <div>
                                                        <div class="fw-bold"><%= student.first_name %> <%= student.last_name %></div>
                                                        <div class="small text-muted"><%= student.email %></div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td><%= student.student_id %></td>
                                            <td><%= new Date(student.enrollment_date).toLocaleDateString() %></td>
                                            <td>
                                                <span class="badge bg-info"><%= student.submission_count %></span>
                                            </td>
                                            <td>
                                                <% if (student.status === 'active') { %>
                                                    <span class="badge bg-success">Active</span>
                                                <% } else if (student.status === 'dropped') { %>
                                                    <span class="badge bg-danger">Dropped</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <div class="d-flex justify-content-end">
                                                    <% if (student.status === 'active') { %>
                                                        <button type="button" class="btn btn-sm btn-warning" 
                                                                onclick="confirmRemoveStudent('<%= student.user_id %>', '<%= student.first_name %> <%= student.last_name %>')">
                                                            <i class="fas fa-user-minus"></i> Drop
                                                        </button>
                                                    <% } else { %>
                                                        <form action="/admin/courses/<%= course.course_id %>/students/add" method="POST">
                                                            <input type="hidden" name="student_id" value="<%= student.user_id %>">
                                                            <button type="submit" class="btn btn-sm btn-success">
                                                                <i class="fas fa-user-plus"></i> Re-enroll
                                                            </button>
                                                        </form>
                                                    <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i> No students enrolled in this course.
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Course Info -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Course Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Course Code:</strong> <%= course.course_code %>
                    </div>
                    <div class="mb-3">
                        <strong>Title:</strong> <%= course.title %>
                    </div>
                    <div class="mb-3">
                        <strong>Semester:</strong> <%= course.semester_name %>
                    </div>
                    <div class="mb-3">
                        <strong>Credit Hours:</strong> <%= course.credit_hours %>
                    </div>
                    <div class="mb-3">
                        <strong>Status:</strong>
                        <% if (course.is_active) { %>
                            <span class="badge bg-success">Active</span>
                        <% } else { %>
                            <span class="badge bg-danger">Inactive</span>
                        <% } %>
                    </div>
                    <div class="d-grid">
                        <a href="/admin/courses/edit/<%= course.course_id %>" class="btn btn-primary">
                            <i class="fas fa-edit me-1"></i> Edit Course
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Student Modal -->
<div class="modal fade" id="addStudentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Student to Course</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <% if (availableStudents && availableStudents.length > 0) { %>
                    <form id="addStudentForm" action="/admin/courses/<%= course.course_id %>/students/add" method="POST">
                        <div class="mb-3">
                            <label for="student_id" class="form-label">Select Student</label>
                            <select class="form-select" id="student_id" name="student_id" required>
                                <option value="">-- Select a student --</option>
                                <% availableStudents.forEach(student => { %>
                                    <option value="<%= student.user_id %>">
                                        <%= student.first_name %> <%= student.last_name %> (<%= student.email %>)
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                    </form>
                <% } else { %>
                    <div class="alert alert-info">
                        <% if (students && students.length > 0) { %>
                            <i class="fas fa-info-circle me-2"></i> All students are already enrolled in this course.
                        <% } else { %>
                            <i class="fas fa-info-circle me-2"></i> No students found in the system. <a href="/admin/users/create">Create a student user</a> first.
                        <% } %>
                    </div>
                <% } %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <% if (availableStudents && availableStudents.length > 0) { %>
                    <button type="submit" form="addStudentForm" class="btn btn-success">Add Student</button>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Remove Student Confirmation Modal -->
<div class="modal fade" id="removeStudentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Student Removal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to remove <span id="studentName" class="fw-bold"></span> from this course?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="removeStudentForm" action="/admin/courses/<%= course.course_id %>/students/remove" method="POST">
                    <input type="hidden" name="student_id" id="removeStudentId">
                    <button type="submit" class="btn btn-danger">Remove Student</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
    }
</style>

<script>
    function confirmRemoveStudent(studentId, studentName) {
        document.getElementById('removeStudentId').value = studentId;
        document.getElementById('studentName').textContent = studentName;
        new bootstrap.Modal(document.getElementById('removeStudentModal')).show();
    }
</script> 