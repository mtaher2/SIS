<div class="container mt-4">
    <div class="row mb-4 align-items-center">
        <div class="col-md-8">
            <h1 class="mb-2">Course Management</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Admin Dashboard</a></li>
                    <li class="breadcrumb-item active">Course Management</li>
                </ol>
            </nav>
        </div>
        <div class="col-md-4 text-end">
            <a href="/admin/courses/create" class="btn btn-success">
                <i class="fas fa-plus me-1"></i> Create New Course
            </a>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form action="/admin/courses" method="GET" class="row g-3">
                <div class="col-md-4">
                    <label for="search" class="form-label">Search</label>
                    <input type="text" class="form-control" id="search" name="search" 
                           placeholder="Course Code or Title" value="<%= locals.search || '' %>">
                </div>
                <div class="col-md-3">
                    <label for="semester" class="form-label">Semester</label>
                    <select class="form-select" id="semester" name="semester_id">
                        <option value="">All Semesters</option>
                        <% if (locals.semesters && semesters.length > 0) { %>
                            <% semesters.forEach(semester => { %>
                                <option value="<%= semester.semester_id %>" 
                                    <%= locals.semester_id == semester.semester_id ? 'selected' : '' %>>
                                    <%= semester.semester_name %>
                                </option>
                            <% }); %>
                        <% } %>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">All Statuses</option>
                        <option value="active" <%= locals.status === 'active' ? 'selected' : '' %>>Active</option>
                        <option value="inactive" <%= locals.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Courses Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Course Code</th>
                            <th>Title</th>
                            <th>Credits</th>
                            <th>Semester</th>
                            <th>Enrolled</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (courses && courses.length > 0) { %>
                            <% courses.forEach(course => { %>
                                <tr>
                                    <td><strong><%= course.course_code %></strong></td>
                                    <td><%= course.title %></td>
                                    <td><%= course.credit_hours %></td>
                                    <td><%= course.semester_name %></td>
                                    <td>
                                        <%= course.enrolled_students || 0 %> students
                                    </td>
                                    <td>
                                        <% if (course.is_active) { %>
                                            <span class="badge bg-success">Active</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Inactive</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-end">
                                            <a href="/courses/<%= course.course_id %>" class="btn btn-sm btn-info me-1" title="View">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/admin/courses/edit/<%= course.course_id %>" class="btn btn-sm btn-primary me-1" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger" title="Delete"
                                                    onclick="confirmDelete('/admin/courses/delete/<%= course.course_id %>', '<%= course.course_code %>')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="text-center py-4">
                                    <div class="alert alert-info mb-0">
                                        No courses found. <a href="/admin/courses/create">Create a new course</a>.
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <% if (locals.totalPages && totalPages > 1) { %>
                <nav aria-label="Course pagination" class="d-flex justify-content-center mt-4">
                    <ul class="pagination">
                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                                <a class="page-link" href="/admin/courses?page=<%= i %><%= locals.search ? '&search=' + search : '' %><%= locals.semester_id ? '&semester_id=' + semester_id : '' %><%= locals.status ? '&status=' + status : '' %>"><%= i %></a>
                            </li>
                        <% } %>
                    </ul>
                </nav>
            <% } %>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Course Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete the course <span id="courseName" class="fw-bold"></span>? This action cannot be undone and will remove all data associated with this course, including enrollments, grades, and materials.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(url, name) {
        document.getElementById('deleteForm').action = url;
        document.getElementById('courseName').textContent = name;
        new bootstrap.Modal(document.getElementById('deleteModal')).show();
    }
</script>

