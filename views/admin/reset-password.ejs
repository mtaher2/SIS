<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-2">Reset User Password</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/admin/dashboard">Admin Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/admin/users">User Management</a></li>
                    <li class="breadcrumb-item active">Reset Password</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Reset Password for <%= userData.first_name %> <%= userData.last_name %></h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info" id="alert-message">
                        <i class="fas fa-info-circle me-2"></i> Resetting the password for this user. Make sure to provide the new password to the user securely.
                    </div>

                    <form action="/admin/users/reset-password/<%= userData.user_id %>" method="POST">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" value="<%= userData.username %>" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" value="<%= userData.email %>" readonly>
                        </div>
                        <div class="mb-3">
                            <label for="new_password" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="new_password" name="new_password" required>
                            <small class="form-text text-muted">Password must be at least 6 characters.</small>
                        </div>
                        <div class="mb-3">
                            <label for="confirm_password" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control" id="confirm_password" name="confirm_password" required>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="/admin/users" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Reset Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">User Information</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <% if (userData.profile_image) { %>
                                <img src="/storage/profile_images/<%= userData.profile_image %>" alt="<%= userData.first_name %>" class="rounded-circle" width="70">
                            <% } else { %>
                                <div class="avatar-initial rounded-circle bg-light text-dark d-flex align-items-center justify-content-center" style="width: 70px; height: 70px; font-size: 24px;">
                                    <%= userData.first_name.charAt(0) %><%= userData.last_name.charAt(0) %>
                                </div>
                            <% } %>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h4 class="mb-1"><%= userData.first_name %> <%= userData.last_name %></h4>
                            <p class="text-muted mb-0">@<%= userData.username %></p>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="row mb-2">
                        <div class="col-md-4 fw-bold">Role:</div>
                        <div class="col-md-8">
                            <% if(userData.role === 'admin') { %>
                                <span class="badge rounded-pill" style="background-color: var(--primary-color);">Admin</span>
                            <% } else if(userData.role === 'instructor') { %>
                                <span class="badge rounded-pill" style="background-color: #ff9800;">Instructor</span>
                            <% } else { %>
                                <span class="badge rounded-pill" style="background-color: var(--secondary-color);">Student</span>
                            <% } %>
                        </div>
                    </div>
                    
                    <div class="row mb-2">
                        <div class="col-md-4 fw-bold">Email:</div>
                        <div class="col-md-8"><%= userData.email %></div>
                    </div>
                    
                    <div class="row mb-2">
                        <div class="col-md-4 fw-bold">Status:</div>
                        <div class="col-md-8">
                            <% if(userData.is_active) { %>
                                <span class="badge bg-success">Active</span>
                            <% } else { %>
                                <span class="badge bg-danger">Inactive</span>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Make the alert disappear after 3 seconds
    document.addEventListener('DOMContentLoaded', function() {
        const alertMessage = document.getElementById('alert-message');
        if (alertMessage) {
            setTimeout(function() {
                alertMessage.style.transition = 'opacity 0.5s ease';
                alertMessage.style.opacity = '0';
                setTimeout(function() {
                    alertMessage.style.display = 'none';
                }, 500);
            }, 3000);
        }
    });
</script> 